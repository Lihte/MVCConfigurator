@model MVCConfigurator.UI.Models.CustomerDetailsViewModel
@{
    ViewBag.Title = "CustomerDetails";
}

<h2>CustomerDetails</h2>
@Html.HiddenFor(m=>m.Customer.UserName)
<h3>@Model.Customer.UserName</h3>

@using(Html.BeginForm("CustomerDetails")) 
{ 
    @Html.AntiForgeryToken()
<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Order Id</th>
            <th>Delivery Date</th>
            <th>Ready to ship</th>
        </tr>
    </thead>
    <tbody>
        @for(int i = 0; i < Model.Orders.Count; i++)
        {
            <tr>
                <td>@Model.Orders[i].DeliveryDate.ToShortDateString()@Html.HiddenFor(m => m.Orders[i].DeliveryDate)</td>
                <td>@Html.HiddenFor(m=>m.Orders[i].Id)</td>
                <td>@Html.CheckBoxFor(m => m.Orders[i].IsReady)</td>
            </tr>
        }
    </tbody>
    
</table>
<input type="submit" value="Update Orders"/>
}
