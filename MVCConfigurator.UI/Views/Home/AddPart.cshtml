@model MVCConfigurator.UI.Models.PartViewModel
@{
    ViewBag.Title = "AddPart";
}
<h2>AddPart</h2>

@Html.ActionLink("Back to product part list", "ProductPartList", new { id = Model.ProductId })

<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ProductId)
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-2"></div>
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.PartDetails.Category.Name, Model.Categories, "-- Select Category --")
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PartDetails.Category, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PartDetails.Category.Name)
                @Html.ValidationMessageFor(model => model.PartDetails.Category.Name)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PartDetails.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PartDetails.Name)
                @Html.ValidationMessageFor(model => model.PartDetails.Name)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PartDetails.Price, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PartDetails.Price)
                @Html.ValidationMessageFor(model => model.PartDetails.Price)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PartDetails.LeadTime, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PartDetails.LeadTime)
                @Html.ValidationMessageFor(model => model.PartDetails.LeadTime)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PartDetails.StockKeepingUnit, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PartDetails.StockKeepingUnit)
                @Html.ValidationMessageFor(model => model.PartDetails.StockKeepingUnit)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PartDetails.ImagePath, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PartDetails.ImagePath)
                @Html.ValidationMessageFor(model => model.PartDetails.ImagePath)
            </div>
        </div>
    </div>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th></th>
                <th>Category</th>
                <th>Name</th>
                <th>Price</th>
                <th>Lead Time</th>
                <th>SKU</th>
                <th>Image Path</th>
                <th>Is Incompatible</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.ExistingParts.Count(); i++)
            {
                <tr>
                    <td>@Html.HiddenFor(m => m.ExistingParts[i].Id)</td>
                    <td>@Model.ExistingParts[i].Category.Name)</td>
                    <td>@Model.ExistingParts[i].Name)</td>
                    <td>@Model.ExistingParts[i].Price</td>
                    <td>@Model.ExistingParts[i].LeadTime</td>
                    <td>@Model.ExistingParts[i].StockKeepingUnit</td>
                    <td>@Model.ExistingParts[i].ImagePath</td>
                    <td>@Html.CheckBoxFor(m => m.ExistingParts[i].IsIncompatible)</td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <input type="submit" value="Add Part" class="btn btn-default" />
}



