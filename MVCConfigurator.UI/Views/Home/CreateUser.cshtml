@model MVCConfigurator.UI.Models.RegisterViewModel
@{
    ViewBag.Title = "Create User";
}

<h2>Create User</h2>

@using(Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Username, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Username)
                @Html.ValidationMessageFor(model => model.Username)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserDetails.FirstName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserDetails.FirstName)
                @Html.ValidationMessageFor(model => model.UserDetails.FirstName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserDetails.LastName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserDetails.LastName)
                @Html.ValidationMessageFor(model => model.UserDetails.LastName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserDetails.Address, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserDetails.Address)
                @Html.ValidationMessageFor(model => model.UserDetails.Address)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserDetails.Company, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserDetails.Company)
                @Html.ValidationMessageFor(model => model.UserDetails.Company)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserDetails.Phone, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserDetails.Phone)
                @Html.ValidationMessageFor(model => model.UserDetails.Phone)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmPassword,"Confirm Password", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.ConfirmPassword)
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to login", "Index")
</div>

