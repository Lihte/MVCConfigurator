@model MVCConfigurator.UI.Models.CustomerDetailsViewModel

@{
    ViewBag.Title = "Order List";
}

<h2>Order List</h2>
@Html.HiddenFor(m=>m.Customer.UserName)
<h4>@Model.Customer.UserName</h4><br />
<h2>Backorder log</h2>

    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Order Id</th>
                <th>Delivery Date</th>
                <th>Ready to ship</th>
            </tr>
        </thead>
        <tbody>
            @for(int i = 0; i < Model.Orders.Count; i++)
        {
                <tr>
                    <td>@Model.Orders[i].Id</td>
                    <td>@Model.Orders[i].DeliveryDate.ToShortDateString()@Html.HiddenFor(m => m.Orders[i].DeliveryDate)</td>
                    <td>@Model.Orders[i].IsReady</td>
                </tr>
        }
        </tbody>

    </table>
